<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeOff.Views.NewItemPage"
             Title="New Product">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label 
                Text="New Product"
                TextColor="White"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                FontSize="20"/>
        </StackLayout>
    </Shell.TitleView>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ActivityIndicator Grid.Row="0" Grid.Column="0" x:Name="actInd" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="65" WidthRequest="65"  ZIndex="99"/>
        <ScrollView Grid.Row="0" Grid.Column="0">
        <VerticalStackLayout
                Spacing="25"
                Padding="10,0">

            <Entry
                x:Name="txtTitle"
                Placeholder="Enter Title"/>

            <Editor
                x:Name="txtDescription"
                AutoSize="TextChanges"
                Placeholder="Enter Desctiption"/>

                <Picker x:Name="ddlCategory"
                Title="--Select Category--"
                ItemsSource="{Binding CategoryList}"
                ItemDisplayBinding="{Binding LookupName}"/> 

                <Picker x:Name="ddlAge"
                Title="--Select Age--"
                ItemsSource="{Binding AgeList}"
                ItemDisplayBinding="{Binding LookupName}"/>

                <Picker x:Name="ddlCondition"
                Title="--Select Condition--"
                ItemsSource="{Binding ConditionList}"
                ItemDisplayBinding="{Binding LookupName}"/>

                <Entry
                x:Name="txtTags"
                Placeholder="Enter Tags (comma separated)"/>

            <Button
                x:Name="btnUpload"
                Text="Upload Images"
                Clicked="btnUpload_Clicked"/>

            <Button
                x:Name="btnSave"
                Text="Save"
                Clicked="btnSave_Clicked"/>

            <Button
                x:Name="btnCancel"
                Text="Cancel"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="btnCancel_Clicked"/>
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>