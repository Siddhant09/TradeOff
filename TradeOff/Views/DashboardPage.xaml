<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradeOff.Views.DashboardPage">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label 
                Text="Dashboard"
                TextColor="White"
                FontAttributes="Bold"
                VerticalTextAlignment="Center"
                FontSize="20"/>
            <ImageButton
                x:Name="btnNotification"
                Source="notification.png"
                WidthRequest="40"
                Margin="10"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="EndAndExpand"
                Clicked="btnNotification_Clicked"/>
        </StackLayout>
    </Shell.TitleView>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ActivityIndicator Grid.Row="0" Grid.Column="0" x:Name="actInd" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="65" WidthRequest="65"  ZIndex="99"/>
        <ScrollView Grid.Row="0" Grid.Column="0">
        <VerticalStackLayout
                Spacing="25"
                Padding="10,0">

            <Picker x:Name="ddlDateRange"
                Title="--Select--">
                <Picker.Items>
                    <x:String>Last 7 Days</x:String>
                    <x:String>Last 30 Days</x:String>
                    <x:String>All Time</x:String>
                </Picker.Items>
            </Picker>
            <Label
                Text="Most Liked Items"
                FontAttributes="Italic"/>
            <CarouselView 
                ItemsSource="{Binding MostLiked}" 
                Loop="False"
                EmptyView="No items to display.">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal"
                        SnapPointsType="None"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            WidthRequest="400">
                            <StackLayout
                                Orientation="Horizontal">
                                <StackLayout>
                                    <Image
                                        Source="{Binding PicUrl}"
                                        WidthRequest="200"
                                        HeightRequest="200"
                                        Aspect="AspectFill"/>
                                </StackLayout>
                                <StackLayout
                                    Orientation="Vertical"
                                    VerticalOptions="StartAndExpand"
                                    HorizontalOptions="Center">
                                    <Label
                                        Text="{Binding Title}"
                                        FontAttributes="Bold"
                                        Margin="5"
                                        FontSize="18"/>
                                    <Label
                                        FontSize="100"
                                        VerticalOptions="End"
                                        HorizontalOptions="CenterAndExpand"
                                        FontAttributes="Bold"
                                        TextColor="LightGreen"  
                                        Text="{Binding Likes}"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Label
                Text="Most Disliked Items"
                FontAttributes="Italic"/>
            <CarouselView 
                ItemsSource="{Binding MostDisliked}" 
                Loop="False"
                EmptyView="No items to display.">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal"
                        SnapPointsType="None"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            WidthRequest="400">
                            <StackLayout
                                Orientation="Horizontal">
                                <StackLayout>
                                    <Image
                                        Source="{Binding PicUrl}"
                                        WidthRequest="200"
                                        HeightRequest="200"
                                        Aspect="AspectFill"/>
                                </StackLayout>
                                <StackLayout
                                    Orientation="Vertical"
                                    VerticalOptions="StartAndExpand"
                                    HorizontalOptions="Center">
                                    <Label
                                        Text="{Binding Title}"
                                        FontAttributes="Bold"
                                        Margin="5"
                                        FontSize="18"/>
                                    <Label
                                        FontSize="100"
                                        VerticalOptions="End"
                                        HorizontalOptions="CenterAndExpand"
                                        FontAttributes="Bold"
                                        TextColor="OrangeRed"  
                                        Text="{Binding Likes}"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Label
                Text="Most Requested Items"
                FontAttributes="Italic"/>
            <CarouselView 
                ItemsSource="{Binding MostRequested}" 
                Loop="False"
                EmptyView="No items to display.">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout 
                        Orientation="Horizontal"
                        SnapPointsType="None"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            WidthRequest="400">
                            <StackLayout
                                Orientation="Horizontal">
                                <StackLayout>
                                    <Image
                                        Source="{Binding PicUrl}"
                                        WidthRequest="200"
                                        HeightRequest="200"
                                        Aspect="AspectFill"/>
                                </StackLayout>
                                <StackLayout
                                    Orientation="Vertical"
                                    VerticalOptions="StartAndExpand"
                                    HorizontalOptions="Center">
                                    <Label
                                        Text="{Binding Title}"
                                        FontAttributes="Bold"
                                        Margin="5"
                                        FontSize="18"/>
                                    <Label
                                        FontSize="100"
                                        VerticalOptions="End"
                                        HorizontalOptions="CenterAndExpand"
                                        FontAttributes="Bold"
                                        TextColor="LightBlue"  
                                        Text="{Binding Likes}"/>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Label
                Text="Most Trade Offs"
                FontAttributes="Italic"/>
                <ListView 
                    ItemsSource="{Binding Users}"
                    RowHeight="80"
                    SelectionMode="None"
                    VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <StackLayout
                            Orientation="Horizontal">
                            <Image 
                                Source="{Binding UserPicUrl}"
                                HeightRequest="50"/>
                            <StackLayout 
                                Orientation="Vertical"
                                Margin="5"
                                VerticalOptions="Center">
                                <Label 
                                    Text="{Binding UserName}"
                                    FontAttributes="Bold"/>
                                <Label 
                                    Text="{Binding Date}"
                                    FontSize="Caption"
                                    FontAttributes="Italic"/>
                            </StackLayout>
                            <StackLayout
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Orientation="Horizontal">
                                    <Label
                                        Text="{Binding Likes}"
                                        FontSize="40"
                                        TextColor="LightGreen"/>
                                    <Label
                                        Text=" / "
                                        FontSize="40"/>
                                    <Label
                                        Text="{Binding Dislikes}"
                                        FontSize="40"
                                        TextColor="OrangeRed"/>
                                </StackLayout>
                        </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>