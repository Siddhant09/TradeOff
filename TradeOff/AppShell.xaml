<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TradeOff.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TradeOff.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
    <ShellContent
        ContentTemplate="{DataTemplate local:SignInPage}"
        Route="MainPage" />
    </TabBar>

    <TabBar>
        <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="InventoryPage" />
        
        <ShellContent
        Title="Requests"
        ContentTemplate="{DataTemplate local:RequestsPage}"
        Route="RequestsPage" />
        
        <ShellContent
        Title="Browse"
        ContentTemplate="{DataTemplate local:BrowsePage}"
        Route="BrowsePage" />
        
        <ShellContent
        Title="History"
        ContentTemplate="{DataTemplate local:HistoryPage}"
        Route="HistoryPage" />

        <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />
    </TabBar>
</Shell>
